{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Formula Schema",
  "type": "object",
  "properties": {
    "identifiers": {
      "type": "array",
      "description": "name or alias",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "version": {"type": "string"},
    "author": {"type": "string"},
    "createdOn": {"type": "string"},
    "accordingTo": {"type": "string"},
    "priority": {"type": "string"},
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "desc": {"type": "string"},
    "field": {"type": "string"},
    "pre": {
      "type": "array",
      "description": "short for prerequisites",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "related": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "refs": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "expression": {"type": "string"},
    "variables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "varName": {"type": "string"},
          "varSymbol": {"type": "string"},
          "varDesc": {"type": "string"}
        },
        "required": ["varName", "varSymbol"],
        "additionalProperties": false
      },
      "uniqueItems": true
    }
  },
  "required": ["expression"],
  "additionalProperties": false
}